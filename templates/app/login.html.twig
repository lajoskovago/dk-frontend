{% extends '@layout/default.html.twig' %}

{% block title %}Sign-In{% endblock %}

{% block flash_messages %}{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-sm-6 col-md-5 col-md-offset-3">

            <h3>Please sign in</h3>
            {# we parse the messages here, as we dont use flash messages
             we can use the same partial though, due to the same messages structure #}
            {% include '@partial/alerts.html.twig' %}

            {% set dummy = form.setAttribute('method', 'post') %}
            {% set dummy = form.prepare() %}

            {{ form().openTag(form) | raw }}
                <div class="form-group {% if form.get('identity').getMessages() %}has-error{% endif %}">
                    {% set dummy = form.get('identity').setAttribute('class', 'form-control') %}
                    {{ formInput(form.get('identity')) }}
                    {{ formElementErrors(form.get('identity'), {'class': 'element-errors'}) }}
                </div>
                <div class="form-group {% if form.get('credential').getMessages() %}has-error{% endif %}">
                    {% set dummy = form.get('credential').setAttribute('class', 'form-control') %}
                    {{ formInput(form.get('credential')) }}
                    {{ formElementErrors(form.get('credential'), {'class': 'element-errors'}) }}
                </div>
                <div class="checkbox">
                    <label>
                        {{ formCheckbox(form.get('remember')) }} {{ form.get('remember').getLabel() }}
                    </label>
                </div>
                {% set dummy = form.get('submit').setAttribute('class', 'btn btn-lg btn-primary btn-block') %}
                {{ formSubmit(form.get('submit')) }}
                <div style="margin-top: 5px;">
                    <a href="/forgot-password" >Forgot Password?</a>
                </div>
            {{ form().closeTag() | raw }}
        </div>
    </div>

{% endblock %}